    {
      "name": "NL Commands",
      "item": [
        {
          "name": "Parse Command (All Actions)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"block my calendar for 2pm tomorrow, lunch with mom\",\n  \"currentDate\": \"2024-12-13\",\n  \"currentTime\": \"10:00\",\n  \"existingEvents\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/parse-command",
              "host": ["{{baseUrl}}"],
              "path": ["api", "parse-command"]
            },
            "description": "Parse natural language calendar commands. Supports:\n- create_event: \"block 2pm tomorrow for lunch\"\n- update_event: \"move dentist to next Tuesday\"\n- delete_event: \"cancel my 3pm meeting\"\n- find_availability: \"find next 30 min slot\"\n- query_event: \"what's on my calendar tomorrow?\"\n- set_availability: \"available 9-5 weekdays\""
          }
        },
        {
          "name": "Parse Availability (Legacy)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"Available 9am to 5pm weekdays\",\n  \"currentDate\": \"2024-12-13\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/parse-availability",
              "host": ["{{baseUrl}}"],
              "path": ["api", "parse-availability"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/data/app/events",
              "host": ["{{baseUrl}}"],
              "path": ["data", "app", "events"]
            },
            "description": "Get all calendar events for the authenticated user"
          }
        },
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Lunch with Mom\",\n  \"description\": \"Meeting at the cafe\",\n  \"date\": \"2024-12-14\",\n  \"startTime\": \"14:00\",\n  \"endTime\": \"15:00\",\n  \"tagId\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/data/app/events",
              "host": ["{{baseUrl}}"],
              "path": ["data", "app", "events"]
            },
            "description": "Create a new calendar event"
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Event Title\",\n  \"description\": \"Updated description\",\n  \"date\": \"2024-12-15\",\n  \"startTime\": \"10:00\",\n  \"endTime\": \"11:00\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/data/app/events/:eventId",
              "host": ["{{baseUrl}}"],
              "path": ["data", "app", "events", ":eventId"],
              "variable": [
                {
                  "key": "eventId",
                  "value": "evt_123456"
                }
              ]
            },
            "description": "Update an existing calendar event"
          }
        },
        {
