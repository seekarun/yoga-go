                  "path": ["data", "app", "courses", ":courseId", "progress", ":savePoint"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    },
                    {
                      "key": "savePoint",
                      "value": "lesson-5",
                      "description": "Progress save point/lesson ID"
                    }
                  ]
                },
                "description": "Retrieve progress information for an enrolled course at a specific save point (authenticated user)"
              },
              "response": []
            }
          ]
        },
