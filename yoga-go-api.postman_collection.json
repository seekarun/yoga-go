  "item": [
    {
      "name": "Guest Routes",
      "item": [
        {
          "name": "Experts",
          "item": [
            {
              "name": "Get All Experts",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/experts",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "experts"]
                },
                "description": "Retrieve list of all yoga experts/instructors"
              },
              "response": []
            },
            {
              "name": "Get Expert by ID",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/experts/:expertId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "experts", ":expertId"],
                  "variable": [
                    {
                      "key": "expertId",
                      "value": "deepak",
                      "description": "Expert ID (e.g., deepak, kavitha)"
                    }
                  ]
                },
                "description": "Retrieve detailed information about a specific expert including their courses, certifications, and social links"
              },
              "response": []
            }
          ]
        },
        {
          "name": "Courses",
          "item": [
            {
              "name": "Get All Courses",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses"]
                },
                "description": "Retrieve list of all available yoga courses"
              },
              "response": []
            },
            {
              "name": "Get Course by ID",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID (e.g., course-deepak-1, course-deepak-2, course-kavitha-1, course-kavitha-2)"
                    }
                  ]
                },
                "description": "Retrieve detailed information about a specific course including curriculum, reviews, and requirements"
              },
              "response": []
            },
            {
              "name": "Create Course",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json",
                    "type": "text"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Advanced Vinyasa Flow\",\n  \"description\": \"Master advanced vinyasa sequences and transitions\",\n  \"longDescription\": \"Detailed description here...\",\n  \"instructor\": {\n    \"id\": \"deepak\",\n    \"name\": \"Deepak Kumar\",\n    \"title\": \"Senior Yoga Instructor\",\n    \"bio\": \"Expert bio...\",\n    \"avatar\": \"/images/deepak.jpg\"\n  },\n  \"level\": \"Advanced\",\n  \"duration\": \"12 weeks\",\n  \"price\": 149,\n  \"category\": \"Vinyasa Yoga\",\n  \"tags\": [\"vinyasa\", \"flow\", \"advanced\"],\n  \"thumbnail\": \"/images/course-thumbnail.jpg\",\n  \"totalLessons\": 0,\n  \"freeLessons\": 0,\n  \"requirements\": [\"Prior yoga experience\", \"Yoga mat\"],\n  \"whatYouWillLearn\": [\"Advanced poses\", \"Complex transitions\"],\n  \"featured\": false,\n  \"isNew\": true\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/data/courses",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses"]
                },
                "description": "Create a new course. Course starts with status 'IN_PROGRESS'. Required fields: title, description, instructor (with id and name), level, duration, price, category."
              },
              "response": []
            },
            {
              "name": "Update Course",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json",
                    "type": "text"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Advanced Vinyasa Flow - Updated\",\n  \"description\": \"Updated description\",\n  \"price\": 129,\n  \"status\": \"PUBLISHED\",\n  \"totalLessons\": 12,\n  \"featured\": true\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    }
                  ]
                },
                "description": "Update an existing course. Can update any field including status. Set status to 'PUBLISHED' to make course publicly visible."
              },
              "response": []
            },
            {
              "name": "Delete Course",
              "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    }
                  ]
                },
                "description": "Delete a course and all associated lessons. Returns the count of deleted lessons."
              },
              "response": []
            },
            {
              "name": "Get Course Items",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId/items",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId", "items"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    }
                  ]
                },
                "description": "Retrieve all lessons/videos for a specific course. Includes cloudflareVideoId and cloudflareVideoStatus for Cloudflare Stream videos."
              },
              "response": []
            },
            {
              "name": "Get Course Item by ID",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId/items/:itemId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId", "items", ":itemId"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    },
                    {
                      "key": "itemId",
                      "value": "deepak-1-item-1",
                      "description": "Course item/lesson ID"
                    }
                  ]
                },
                "description": "Retrieve detailed information about a specific course lesson/video. Includes cloudflareVideoId and cloudflareVideoStatus."
              },
              "response": []
            },
            {
              "name": "Get Course Progress",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId/progress/:savePoint",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId", "progress", ":savePoint"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    },
                    {
                      "key": "savePoint",
                      "value": "lesson-5",
                      "description": "Progress save point/lesson ID"
                    }
                  ]
                },
                "description": "Retrieve progress information for a course at a specific save point (guest mode)"
              },
              "response": []
            },
            {
              "name": "Create Course Lesson",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json",
                    "type": "text"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Introduction to Sun Salutation\",\n  \"duration\": \"15:30\",\n  \"description\": \"Learn the basics of Sun Salutation (Surya Namaskar)\",\n  \"cloudflareVideoId\": \"abc123def456\",\n  \"cloudflareVideoStatus\": \"ready\",\n  \"isFree\": true\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId/items",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId", "items"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    }
                  ]
                },
                "description": "Create a new lesson for a course. Use cloudflareVideoId from the video upload endpoint. Status can be 'uploading', 'processing', 'ready', or 'error'."
              },
              "response": []
            },
            {
              "name": "Update Course Lesson",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json",
                    "type": "text"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Introduction to Sun Salutation - Updated\",\n  \"duration\": \"16:00\",\n  \"description\": \"Updated description\",\n  \"cloudflareVideoStatus\": \"ready\",\n  \"isFree\": true\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId/items/:itemId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId", "items", ":itemId"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    },
                    {
                      "key": "itemId",
                      "value": "deepak-1-item-1",
                      "description": "Lesson ID"
                    }
                  ]
                },
                "description": "Update an existing course lesson. Can update title, duration, description, cloudflareVideoStatus, or isFree flag."
              },
              "response": []
            },
            {
              "name": "Delete Course Lesson",
              "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/data/courses/:courseId/items/:itemId",
                  "host": ["{{baseUrl}}"],
                  "path": ["data", "courses", ":courseId", "items", ":itemId"],
                  "variable": [
                    {
                      "key": "courseId",
                      "value": "course-deepak-1",
                      "description": "Course ID"
                    },
                    {
                      "key": "itemId",
                      "value": "deepak-1-item-1",
                      "description": "Lesson ID"
                    }
                  ]
                },
                "description": "Delete a course lesson. This will also remove the lesson from the course curriculum."
              },
              "response": []
            }
          ]
        }
      ]
    },
