{
  "name": "yoga-go-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Yoga-GO application",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:network": "cdk deploy YogaGoNetworkStack",
    "deploy:container": "cdk deploy YogaGoContainerStack",
    "deploy:loadbalancer": "cdk deploy YogaGoLoadBalancerStack",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "destroy": "cdk destroy --all"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "aws-cdk": "^2.160.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.160.0",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.3"
  }
}
